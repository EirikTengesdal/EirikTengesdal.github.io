<div class="col">
  <a href="{% if statement.redirect %}{{ statement.redirect }}{% else %}{{ statement.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if statement.img %}
        {%
          include figure.liquid
          loading="eager"
          path=statement.img
          sizes = "250px"
          alt="statement thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ statement.title | markdownify }}</h2>
        <p class="card-text">{{ statement.description | markdownify }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if statement.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ statement.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if statement.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ statement.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
